<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ib="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.bvin.widget.indicatorbar.MainActivity" >

    <cn.bvin.widget.indicatorbar.IndicatorBar
        android:id="@+id/indicatorBar1"
        android:layout_margin="5dp"
        android:padding="12dp"
        android:background="#777"
        ib:trackThickness = "3px"
        ib:themeColor = "#222"
        ib:highlightColor = "#f23"
        ib:textSize = "12sp"
        ib:highlightTextSize = "15sp"
        ib:thumb = "@drawable/range_seek_thumb"
        ib:highlightThumb = "@drawable/range_seek_thumb_focus"
        ib:currentPosition = "2"
        ib:maxPosition = "8"
        ib:indicatorOffset = "3"
        ib:lowlightSelectedText = "不可选"
        ib:maxHighlightSelectedText = "最大"
        ib:showTicks = "true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <ToggleButton
        android:id="@+id/toggleButton1"
        android:textOn="显示刻度"
        android:textOff="不现实刻度"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="高亮indicator,用逗号分割"
        android:ems="10" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Indicator偏差"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="主题颜色"
        android:ems="10" />
    
    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="高亮颜色"
        android:ems="10" />

</LinearLayout>